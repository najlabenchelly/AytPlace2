{% extends 'base.html.twig' %}

{% block title %}Ayt'place{% endblock %}

{% block body %}
<div class="container">

<h1 class="my-5">Voici les annonces de nos hôtes</h1>
  <div class="filter__container">
                <h4>Capacité</h4>
                <hr class="filter-line">
                <ul class="filter-list__container capacity">
                    <form action="#" method="post" id="filter-capacity">
                        <li class="filter__item">50 et moins <label class="container"><input type="checkbox" value="50"> <span class="checkmark"></span></label></li>
                        <li class="filter__item">50 à 100 <label  class="container"><input type="checkbox" value="100"> <span class="checkmark"></span></label></li>
                        <li class="filter__item">100 et plus <label  class="container"><input type="checkbox" value="101"> <span class="checkmark"></span></label></li>
                    </form>
                </ul>
            </div>
    <div class="row">
    {% for ad in ads %}

         {% set url = path ('ads_show', {'slug': ad.slug }) %}

       <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-header text-center">
                     {{ ad.rooms }} chambres, <strong> {{ad.price}} &euro; /jour</strong> <br>
                     <small> Pas encore noté</small>   
                </div>
                <a href="{{ url }}">


                <img src="{{ ad.coverImage }}" alt="Image de l'apparteement" style="height: 200px; width:100%; display: block">
            
                <div class="card-body">
                   <h4 class="card-title">
                   <a href="{{ url }}"></a>
                   {{ad.title}}
                   </h4>
                       <p class="card-text">
                       {{ ad.introduction }}

                      </p>
                      <a href="{{ url }}" class="btn secondary">En savoir plus </a>

                
                </div>
            
            </div>
        
        </div>



    {% endfor %}
    
    
    
    
    
    </div>
    
    
    
    
    </div>
        




</div>

    </div>
{% endblock %}
