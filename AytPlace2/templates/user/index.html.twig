{% extends 'base.html.twig' %}

{% block title %} Page de {{user.firstName}} {{user.lastName}} {% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-3 text-center ">
             <img src="{{user.picture}}" class="avatar mb-3" alt=" Avatar de {{user.firstname}} {{user.lastname}}">
             <hr>
            <span class="badge badge-primary">{{user.ads | length }} annonces</span>
        </div>
    <div class="col-9">
        <h1> {{user.firstName}} {{user.lastName}} </h1>
        {% if user is same as (app.user) %}
            <div class="mt-3">
            <a href="{{ path('account_profile') }}" class="btn btn-primary">Modifier mes informations </a>
            <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe </a>
            </div>
        {% endif %}
    </div>
    </div>
        {{ user.description | raw}}
    <hr>

    <h2>Les annonces de {{user.firstName}} {{user.lastName}}</h2
        {% if user.ads | length > 0 %}
        
         <div class="row">
        
        {% for ad in user.ads %}
            {% include 'ad/_ad.html.twig' %}

        {% endfor %}
        {% else %}
    <div class="alert alert-warning">
        <p>
        <strong> {{user.firstName}} {{user.lastName}} n'a pas encore d'annonce sur le site </strong>
        </p>
        
     </div>
        {% endif %}

</div>

{% endblock %}